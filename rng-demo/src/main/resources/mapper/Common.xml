<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="Common">

	<sql id="insert_cols">
		, INP_ID
		, INP_DTM
		, UPD_ID
		, UPD_DTM
	</sql>
	
	<sql id="insert_vals">
		, #{employeeId}
    	, #{currentTime}
    	, #{employeeId}
    	, #{currentTime}
	</sql>
	
	<sql id="update">
		, UPD_ID = #{employeeId}
		, UPD_DTM = #{currentTime}
	</sql>
	
	<sql id="insert_vals_sys">
		, #{employeeId}
    	, SYSDATE
    	, #{employeeId}
    	, SYSDATE
	</sql>
	
	<sql id="update_sys">
		, UPD_ID = #{employeeId}
		, UPD_DTM = SYSDATE
	</sql>
    
</mapper>
